<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/gray90</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/gray80</item>
        <item name="android:colorForeground">@color/gray50</item>

        <!-- Theme fonts -->
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Theme form field -->
    <style name="AppTheme.FormField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_input_height_default</item>
        <item name="android:padding">@dimen/standard_spacing</item>
        <item name="android:drawablePadding">@dimen/standard_spacing_half</item>
        <item name="android:drawableTint">@color/text_dark</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="AppTheme.FormField.Outlined">
        <item name="android:background">@drawable/bg_form_field_outlined</item>
    </style>

    <!-- Theme button -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_btn_default</item>
        <item name="android:layout_width">@dimen/btn_width_default</item>
        <item name="android:layout_height">@dimen/btn_height_default</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingStart">@dimen/standard_spacing</item>
        <item name="android:paddingEnd">@dimen/standard_spacing</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="AppTheme.Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>

</resources>