<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_secondary_bottom_rounded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/str_services"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/stylingButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_stylish" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Styling"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/treatmentButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_treatment" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Treatment"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coloringButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_brush" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Coloring"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/relaxingButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_relaxing" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Relaxing"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/haircutButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_scissors" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Haircut"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blowDryButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_hairdryer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Blow dry"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/beardCutButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="5dp"
                            android:src="@drawable/ic_beard" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Beard cut"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/specialButton"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/button_secondary"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_special" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Special"
                            android:textSize="10sp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/scheduleLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/str_schedules"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/schedMonthTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/str_place_holder_date"
                        android:textSize="12sp"
                        android:textColor="@color/primary"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sched1Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_secondary">

                        <TextView
                            android:id="@+id/sched1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_place_holder_day_num"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mon"
                            android:textSize="15sp"
                            android:textColor="@color/secondary" />

                        <ImageView
                            android:id="@+id/sched1Bell"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_notifications_24"
                            android:visibility="gone"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sched2Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_secondary">

                        <TextView
                            android:id="@+id/sched2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_place_holder_day_num"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_tue"
                            android:textSize="15sp"
                            android:textColor="@color/secondary" />

                        <ImageView
                            android:id="@+id/sched2Bell"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_notifications_24"
                            android:visibility="gone"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sched3Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_secondary">

                        <TextView
                            android:id="@+id/sched3TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_place_holder_day_num"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_wed"
                            android:textSize="15sp"
                            android:textColor="@color/secondary" />

                        <ImageView
                            android:id="@+id/sched3Bell"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_notifications_24"
                            android:visibility="gone"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sched4Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_secondary">

                        <TextView
                            android:id="@+id/sched4TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_place_holder_day_num"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_thu"
                            android:textSize="15sp"
                            android:textColor="@color/secondary" />

                        <ImageView
                            android:id="@+id/sched4Bell"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_notifications_24"
                            android:visibility="gone"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sched5Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/button_secondary">

                        <TextView
                            android:id="@+id/sched5TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_place_holder_day_num"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_fri"
                            android:textSize="15sp"
                            android:textColor="@color/secondary" />

                        <ImageView
                            android:id="@+id/sched5Bell"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:foregroundGravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_notifications_24"
                            android:visibility="gone"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/slotsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    android:text="@string/str_available_slots"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/slotAMButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_am"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/slotPMButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_pm"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/slot1Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_time_6_7"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/slot2Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_time_7_8"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/slot3Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_time_8_9"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/slot4Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_time_9_10"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/slot5Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_time_10_11"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                    <Button
                        android:id="@+id/slot6Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/str_time_11_12"
                        android:textColor="@color/secondary"
                        android:background="@drawable/button_secondary" />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/noteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/str_add_note"
                android:background="@drawable/inputfield_primary" />

            <Button
                android:id="@+id/reserveNowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="@string/str_reserve_now"
                android:textColor="@color/secondary"
                android:background="@drawable/button_secondary" />

            <LinearLayout
                android:id="@+id/successfulReservedLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/box_primary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/str_successfully_reserved"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>